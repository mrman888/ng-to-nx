{
  "version": 1,
  "cli": {
    "defaultCollection": "@nrwl/angular"
  },
  "defaultProject": "superApp",
  "projects": {
    "superApp": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        }
      },
      "root": "apps/superApp",
      "sourceRoot": "apps/superApp/src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist/apps/superApp",
            "index": "apps/superApp/src/index.html",
            "main": "apps/superApp/src/main.ts",
            "polyfills": "apps/superApp/src/polyfills.ts",
            "tsConfig": "apps/superApp/tsconfig.app.json",
            "aot": true,
            "assets": [
              "apps/superApp/src/favicon.ico",
              "apps/superApp/src/assets"
            ],
            "styles": [
              "apps/superApp/src/styles.scss"
            ],
            "scripts": []
          },
          "configurations": {
            "production": {
              "fileReplacements": [
                {
                  "replace": "apps/superApp/src/environments/environment.ts",
                  "with": "apps/superApp/src/environments/environment.prod.ts"
                }
              ],
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "namedChunks": false,
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": true,
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "2mb",
                  "maximumError": "5mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "6kb",
                  "maximumError": "10kb"
                }
              ]
            }
          }
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "browserTarget": "superApp:build"
          },
          "configurations": {
            "production": {
              "browserTarget": "superApp:build:production"
            }
          }
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "superApp:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "apps/superApp/src/test.ts",
            "polyfills": "apps/superApp/src/polyfills.ts",
            "tsConfig": "apps/superApp/tsconfig.spec.json",
            "karmaConfig": "apps/superApp/karma.conf.js",
            "assets": [
              "apps/superApp/src/favicon.ico",
              "apps/superApp/src/assets"
            ],
            "styles": [
              "apps/superApp/src/styles.scss"
            ],
            "scripts": []
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "apps/superApp/tsconfig.app.json",
              "apps/superApp/tsconfig.spec.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        },
        "e2e": {
          "builder": "@angular-devkit/build-angular:protractor",
          "options": {
            "protractorConfig": "e2e/protractor.conf.js",
            "devServerTarget": "superApp:serve"
          },
          "configurations": {
            "production": {
              "devServerTarget": "superApp:serve:production"
            }
          }
        }
      }
    },
    "superApp-e2e": {
      "root": "apps/superApp-e2e",
      "projectType": "application",
      "architect": {
        "e2e": {
          "builder": "@angular-devkit/build-angular:protractor",
          "options": {
            "protractorConfig": "apps/superApp-e2e/protractor.conf.js",
            "devServerTarget": "superApp:serve"
          },
          "configurations": {
            "production": {
              "devServerTarget": "superApp:serve:production"
            }
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": "apps/superApp-e2e/tsconfig.json",
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    }
  }
}